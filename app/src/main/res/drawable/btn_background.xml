<?xml version="1.0" encoding="utf-8"?>
<!--
   BACKGROUND colors for buttons based on state
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape><solid android:color="#FFB71C1C"/></shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape><solid android:color="#FFB71C1C"/></shape>
    </item>

    <!-- default -->
    <item>
        <shape><solid android:color="#FFF08C35"/></shape>
    </item>
</selector>